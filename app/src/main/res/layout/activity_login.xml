<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/mainbkg"
    tools:context=".login">

    <LinearLayout
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:padding="20dp"
        android:background="@drawable/viewpager_bkg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/ubin12s"
            android:text=" ඇතුල්වීම "
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingBottom="0dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/logoimage"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:id="@+id/txtlogin_email"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:hint="ඔබගේ විද්‍යුත් ලිපිනය ඇතුලත් කරන්න"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="8dp"
            android:background="@drawable/edittext_bkg"
            android:textSize="15dp"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:id="@+id/txtlogin_password"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:hint="ඔබගේ මුරපදය ඇතුළත් කරන්න"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="8dp"
            android:background="@drawable/edittext_bkg"
            android:textSize="15dp"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/login_button"
            android:textSize="18sp"
            android:text=" ඇතුල් වන්න"
            app:cornerRadius = "30dp"/>
        <TextView
            android:id="@+id/signupRedirectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="තවමත් ලියාපදිංචි වී නොමැතිද? ලියාපදිංචි වන්න."
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/lavender"
            android:textSize="13sp"
            />
    </LinearLayout>


</LinearLayout>