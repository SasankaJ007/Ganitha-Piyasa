<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/mainbkg"
    tools:context=".signUp">

    <LinearLayout
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:padding="20dp"
        android:background="@drawable/viewpager_bkg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/ubin12s"
            android:text=" ලියාපදිංචි වීම  "
            android:textSize="36sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/lavender"
            android:paddingTop="5dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/logoimage"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/txtname"
            android:layout_marginTop="0dp"
            android:padding="8dp"
            android:hint=" නම"
            android:drawablePadding="8dp"
            android:background="@drawable/edittext_bkg"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/txtage"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:hint=" වයස"
            android:drawablePadding="8dp"
            android:background="@drawable/edittext_bkg"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/txtemail"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:hint=" විද්‍යුත් ලිපිනය"
            android:drawablePadding="8dp"
            android:background="@drawable/edittext_bkg"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/txtpassword"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:hint=" මුරපදය"
            android:inputType="textPassword"
            android:drawablePadding="8dp"
            android:background="@drawable/edittext_bkg"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/signup_button"
            android:textSize="18sp"
            android:text=" ලියාපදිංචි වන්න"
            app:cornerRadius = "30dp"/>
        <TextView
            android:id="@+id/loginRedirectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="දැනටමත් ලියාපදිංචි වී තිබේද?  ලොග් වෙන්න."
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/lavender"
            android:textSize="13sp"/>

    </LinearLayout>



</LinearLayout>