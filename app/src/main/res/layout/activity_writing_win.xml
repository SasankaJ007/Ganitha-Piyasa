<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WritingWin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#F3FAFF"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/test02"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text=" iqN me;=ï "
            android:textColor="@color/black"
            android:textSize="55sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F3FAFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLayout1"
        tools:ignore="MissingConstraints">


        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:numStars="3"
            android:progressTint="#FFD700"
            android:rating="2"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:stepSize="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/checkBlock1"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/navigation_block01"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/regular"
                android:text=",nd.;a ld,h "
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="@drawable/curves"
                android:fontFamily="@font/archivo_black"
                android:paddingTop="8dp"
                android:text="10 sec"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="27sp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkBlock2"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/navigation_block01"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBlock1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/regular"
                android:paddingTop="25dp"
                android:text="ksjerÈ nj"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txtAcu"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="@drawable/curves"
                android:fontFamily="@font/archivo_black"
                android:paddingTop="8dp"
                android:text="50%"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="27sp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkBlock3"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/navigation_block01"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBlock2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/regular"
                android:paddingTop="25dp"
                android:text=" uÜgu"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txtLev"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="@drawable/curves"
                android:fontFamily="@font/archivo_black"
                android:padding="10dp"
                android:text="ඉතා හොඳයි"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/backGame"
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/win_lose_bg"
            app:layout_constraintEnd_toEndOf="@+id/checkBlock3"
            app:layout_constraintStart_toStartOf="@+id/checkBlock3"
            app:layout_constraintTop_toBottomOf="@+id/checkBlock3">

            <TextView
                android:id="@+id/txt2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/regular"
                android:paddingTop="10dp"
                android:text="  B,Õ jghg"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/backGame"
            app:srcCompat="@drawable/c5" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>